                        <s3_bucket>${s3_bucket}</s3_bucket>
                        <s3_bucket_rpm_dir_path>${s3_bucket_rpm_dir_path}</s3_bucket_rpm_dir_path>
                        <s3_bucket_update_dir_path>${s3_bucket_update_dir_path}</s3_bucket_update_dir_path>
                    </properties>

